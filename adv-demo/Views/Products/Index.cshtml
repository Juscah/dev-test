
@{
    ViewBag.Title = "Products";
}

<div class="row">
    <div class="col-xs-12">
        @Html.ActionLink("Create New", "Create")
    </div>
    <div class="col-xs-12">
        <table class="table">
            <thead>
                <tr>
                    <th>ThumbNailPhoto</th>
                    <th>Name</th>
                    <th>ProductNumber</th>
                    <th>Color</th>
                    <th>StandardCost</th>
                    <th>ListPrice</th>
                    <th>Size</th>
                    <th>Weight</th>
                    <th>ModifiedDate</th>
                    <th>ProductCategory</th>
                    <th>ProductModel</th>
               
                </tr>
            </thead>
        </table>
    </div>
</div>

