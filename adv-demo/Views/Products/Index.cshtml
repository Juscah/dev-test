                        "serchable": true
                    },
                    {
                        "data": "ProductNumber",
                        "autoWidth": true,
                        "serchable": true
                    },
                    {
                        "data": "Color",
                        "autoWidth": true,
                        "serchable": true
                    },
                    {
                        "data": "StandardCost",
                        "autoWidth": true,
                        "serchable": true
                    },
                    {
                        "data": "ListPrice",
                        "autoWidth": true,
                        "serchable": false
                    },
                    {
                        "data": "Size",
                        "autoWidth": true,
                        "serchable": false
                    },
                    {
                        "data": "Weight",
                        "autoWidth": true,
                        "serchable": false
                    },
                    {
                        "data": "ModifiedDate",
                        "autoWidth": true,
                        "serchable": true
                    },
                    {
